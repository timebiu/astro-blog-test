---
const pageTitle = "关于";
const identity = {
  name: "Astro",
  occupation: "Web Developer",
  hobbies: ["Reading", "Traveling", "Hiking"],
};
const skills = ["HTML", "CSS", "JavaScript", "React", "Node.js"];
let isLoading = false;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <a href="/">首页</a>
    <a href="/about">关于</a>
    <a href="/blog">博客</a>
    <h1>{pageTitle}</h1>
    <h2>my infomation</h2>
    <p>my name is {identity.name}</p>
    <p>my occupation is {identity.occupation}</p>
    <p>my hobbies are {identity.hobbies.join(", ")}</p>
    <h2>my skills</h2>
    <ul>
      {skills.map((skill) => <li>{skill}</li>)}
    </ul>
    <h2>{isLoading ? "loading..." : "done"}</h2>
  </body>
</html>
